.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_api_keys_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_api_key_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_api_key_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_api_key.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @api_key.name
      %p
        %b
          = t("activerecord.attributes.admin_api_key.key", :default => t("activerecord.labels.key", :default => "Key"))
          \:
        = @api_key.key
      %p
        %b
          = t("activerecord.attributes.admin_api_key.description", :default => t("activerecord.labels.description", :default => "Description"))
          \:
        = @api_key.description
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_api_key_path(@api_key), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_api_key_path(@api_key), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')

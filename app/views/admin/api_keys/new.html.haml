.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_api_keys_path
      %li.active= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_api_key_path
  .content
    %h2.title
      = t("web-app-theme.new", :default => "New")
      = t("web-app-theme.api_key")
    .inner
      = form_for :api_key, :url => admin_api_keys_path, :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')

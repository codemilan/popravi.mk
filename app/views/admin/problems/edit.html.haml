.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to t("web-app-theme.list", :default => "List"), admin_problems_path
      %li= link_to t("web-app-theme.new", :default => "New"), new_admin_problem_path
      %li.active= link_to t("web-app-theme.edit", :default => "Edit"), edit_admin_problem_path
  .content
    %h2.title #{ t("web-app-theme.edit", :default => "Edit") } Problem
    .inner
      = form_for @problem, :url => admin_problem_path(@problem), :html => { :class => :form, :multipart => true } do |f|
        = render :partial => "form", :locals => {:f => f}

- content_for :sidebar, render(:partial => 'sidebar')

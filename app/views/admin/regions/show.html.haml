.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to t("web-app-theme.list", :default => "List"), admin_regions_path
      %li= link_to t("web-app-theme.new", :default => "New"), new_admin_region_path
      %li.active= link_to t("web-app-theme.show", :default => "Show"), admin_region_path
  .content
    .inner
      %p
        <b>#{ t("activerecord.attributes.admin_region.country_id", :default => t("activerecord.labels.country_id", :default => "Country")) }:</b>
        = @region.country_id
      %p
        <b>#{ t("activerecord.attributes.admin_region.name", :default => t("activerecord.labels.name", :default => "Name")) }:</b>
        = @region.name
      .wat-cf
        #{ link_to "#{image_tag("web-app-theme/application_edit.png", :alt => t("web-app-theme.edit", :default=> "Edit"))} #{t("web-app-theme.edit", :default=> "Edit")}", edit_admin_region_path(@region), :class => "button" } 
        #{ link_to "#{image_tag("web-app-theme/cross.png", :alt => t("web-app-theme.delete", :default=> "Delete"))} #{t("web-app-theme.delete", :default => "Delete")}", admin_region_path(@region), :method => "delete", :class => "button", :confirm => t("web-app-theme.confirm", :default => "Are you sure?") }

- content_for :sidebar, render(:partial => 'sidebar')
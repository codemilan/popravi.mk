%h2 Регистрирајте се

- semantic_form_for resource_name, resource, :url => registration_path(resource_name) do |f|
  - f.inputs do
    = f.input :email, :label => 'E-mail'
    = f.input :password, :as => :password, :label => 'Лозинка'
    = f.input :password_confirmation, :as => :password, :label => 'Потврда на лозинка'
    - f.buttons do
      = f.commit_button 'Регистрирај ме'

= render :partial => "shared/devise_links"

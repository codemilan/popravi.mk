!!!
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %title Поправи.мк
    = stylesheet_link_tag "web_app_theme", "compiled/web_app_theme_override", "themes/drastic-dark/style", :cache => true
  %body
    #container
      #header
        %h1 <a href="/">Поправи.мк</a>
        #user-navigation
          %ul.wat-cf
            <li><a href="#">#{ t("web-app-theme.profile", :default => "Profile") }</a></li>
            <li><a href="#">#{ t("web-app-theme.settings", :default => "Settings") }</a></li>
            <li><a href="/logout" class="logout">#{ t("web-app-theme.logout", :default => "Logout") }</a></li>
        <div id="main-navigation">
        <ul class="wat-cf">
        %li{:class => controller.controller_path == 'admin/categories' ? 'active' : '' }
          %a{:href => admin_categories_path} Categories
        
        %li{:class => controller.controller_path == 'admin/regions' ? 'active' : '' }
          %a{:href => admin_regions_path} Regions
        </ul>
        </div>
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            .message{:class => type.to_s}
              <p>#{ message }</p>
        #main
          = yield
          #footer
            .block
              <p>#{ Time.now.year } Поправи.мк</p>
        #sidebar
          = yield :sidebar

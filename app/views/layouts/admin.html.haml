!!!
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}

    %title Поправи.мк

    = stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/drastic-dark/style", "compiled/web_app_theme_override", :cache => 'admin_cached'

    = csrf_meta_tag

  %body
    #container
      #header
        %h1 <a href="/">Поправи.мк</a>
        #user-navigation
          %ul.wat-cf
            %li= link_to "Settings", edit_user_registration_path
            %li= link_to "Logout", destroy_user_session_path, :class => "logout"
        <div id="main-navigation">
        <ul class="wat-cf">
        %li{:class => controller.controller_path == 'admin/problems' ? 'active' : '' }
          %a{:href => admin_problems_path}= t('web-app-theme.problems')

        %li{:class => controller.controller_path == 'admin/comments' ? 'active' : '' }
          %a{:href => admin_comments_path}= t('web-app-theme.comments')

        %li{:class => controller.controller_path == 'admin/users' ? 'active' : '' }
          %a{:href => admin_users_path}= t('web-app-theme.users')

        %li{:class => controller.controller_path == 'admin/posts' ? 'active' : '' }
          %a{:href => admin_posts_path}= t('web-app-theme.posts')

        %li{:class => controller.controller_path == 'admin/attachments' ? 'active' : '' }
          %a{:href => admin_attachments_path}= t('web-app-theme.attachments')

        %li{:class => controller.controller_path == 'admin/categories' ? 'active' : '' }
          %a{:href => admin_categories_path}= t('web-app-theme.categories')

        %li{:class => controller.controller_path == 'admin/countries' ? 'active' : '' }
          %a{:href => admin_countries_path}= t('web-app-theme.countries')

        %li{:class => controller.controller_path == 'admin/regions' ? 'active' : '' }
          %a{:href => admin_regions_path}= t('web-app-theme.regions')

        %li{:class => controller.controller_path == 'admin/municipalities' ? 'active' : '' }
          %a{:href => admin_municipalities_path}= t('web-app-theme.municipalities')

        %li{:class => controller.controller_path == 'admin/api_keys' ? 'active' : '' }
          %a{:href => admin_api_keys_path}= t('web-app-theme.api_keys')
        </ul>
        </div>
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            .message{:class => type.to_s}
              <p>#{ message }</p>
        #main
          = yield
          #footer
            .block
              <p>#{ Time.now.year } Поправи.мк</p>
        #sidebar
          = yield :sidebar

    = javascript_include_tag 'jquery-1.4.4.min', 'wymeditor/jquery.wymeditor.js', 'wym_boot', 'rails', 'admin', :cache => 'admin_cached'
    = yield :script

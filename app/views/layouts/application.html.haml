!!!
%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
  %head

    %meta{"http-equiv" => "content-type", :content => "text/html;charset=UTF-8"}
    %title= "#{yield(:title)} :: popravi.mk"
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon" />

    <meta name="keywords" content="#{yield(:keywords)}" />
    <meta name="description" content="#{yield(:description)}" />
    = yield(:head)

    = stylesheet_link_tag 'formtastic', 'ui-lightness/jquery-ui-1.8.10.custom.css', 'compiled/screen.css', :media => 'screen, projection', :cache => 'application_cached'

    = csrf_meta_tag

  %body{:id => body_id}
    = render "layouts/nav"

    #header_app
      .wrapper
        %a{:href => "/", :id => "logo"}
          =image_tag('logo2.png')

    #middle
      .wrapper
        - flash.each do |key, msg|
          = content_tag :div, msg, :id => key
        = yield

    #bottom
      .wrapper.border
        .two-thirds
          %h2 За Поправи.мк
          %p Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Ut wisi enim ad minim veniam, quis nostrud exerci tation ullamcorper suscipit lobortis nisl ut aliquip ex ea commodo consequat.
          = image_tag "vip_logo.png"
          = image_tag "metamorfozis.png"
        .third
          %h2 Контакт
          %p Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Lorem ipsum dolor sit amet, consectetuer adipiscing elit.
          
      .wrapper
        .left
          %p
            Created by
            %span
              = link_to 'Dalibor Nasevic', 'http://twitter.com/blackflasher', :target => '_blank'
            &
            %span
              = link_to 'Dime Pashoski', 'http://twitter.com/exterminateart', :target => '_blank'
            //= ", Copyright 2010 - #{Time.now.year}"

        .right
          = link_to 'Twitter', 'http://twitter.com/PopraviMK', :target => '_blank'
          &nbsp;
          = link_to 'Facebook', 'http://www.facebook.com/pages/Popravi-podobri-go-svojot-grad/150464501635940', :target => '_blank'
          &nbsp;
          = mail_to 'info@popravi.mk', t('menu.contact')

    = javascript_include_tag 'jquery-1.4.4.min', 'jquery-ui-1.8.10.custom.min.js', 'rails', 'application', :cache => 'application_cached'
    = yield :script
    = render :partial => "shared/ga"

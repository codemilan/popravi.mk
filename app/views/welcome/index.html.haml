- title("Дома")

.main
  %h2 Последни пријави
  - @problems.each do |problem|
    = render :partial => 'problems/problem', :object => problem

#sidebar
  .sidebar
    %h2 Блог
    .blog
      - @posts.each do |post|
        %li
          = link_to post.title, post
          %span
            објавено пред
            = time_ago_in_words(post.published_at)
          %p
            = truncate post.content, :length => 300


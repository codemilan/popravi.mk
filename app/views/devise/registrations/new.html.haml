- title(t('devise.registrations.title'))

.step
  %h2= t('devise.registrations.title')

  = semantic_form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f|
    = f.semantic_errors :state
    = f.inputs do
      = f.input :email, :label => t('devise.registrations.email'), :required => true
      = f.input :password, :as => :password, :label => t('devise.registrations.password'), :required => true
      = f.input :password_confirmation, :as => :password, :label => t('devise.registrations.password_confirmation'), :required => true
      = f.buttons do
        = f.commit_button t('devise.registrations.register')

  = render :partial => "shared/devise_links"

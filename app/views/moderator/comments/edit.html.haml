.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to t("web-app-theme.list", :default => "List"), moderator_comments_path
      %li.active= link_to t("web-app-theme.edit", :default => "Edit"), edit_moderator_comment_path
  .content
    %h2.title #{ t("web-app-theme.edit", :default => "Edit") } Comment
    .inner
      = form_for @comment, :url => moderator_comment_path(@comment), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}

- content_for :sidebar, render(:partial => 'sidebar')

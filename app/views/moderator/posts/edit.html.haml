.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to t("web-app-theme.list", :default => "List"), moderator_posts_path
      %li= link_to t("web-app-theme.new", :default => "New"), new_moderator_post_path
      %li.active= link_to t("web-app-theme.edit", :default => "Edit"), edit_moderator_post_path
  .content
    %h2.title 
      #{ t("web-app-theme.edit", :default => "Edit")}
      = t("web-app-theme.post")
    .inner
      = form_for @post, :url => moderator_post_path(@post), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}

- content_for :sidebar, render(:partial => 'sidebar')
